<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


     <include
         android:id="@+id/community_search_box_item_ayout"
         layout="@layout/community_searchbox_layout"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.444"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <Button
         android:id="@+id/cmnt_btn_today"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="6dp"
         android:layout_marginLeft="6dp"
         android:layout_marginEnd="7dp"
         android:layout_marginRight="7dp"
         android:text="오늘의 레시피"
         android:textSize="30sp"
         android:gravity="center_vertical"
         android:paddingLeft="20dp"
         app:layout_constraintBottom_toTopOf="@+id/cmnt_btn_week"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/community_search_box_item_ayout"
         android:background="@drawable/community_button1" />

     <Button

         android:id="@+id/cmnt_btn_week"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_marginStart="6dp"
         android:layout_marginLeft="6dp"
         android:layout_marginEnd="7dp"
         android:layout_marginRight="7dp"
         android:text="주간 레시피"
         android:textSize="30sp"
         android:gravity="center_vertical"
         android:paddingLeft="20dp"
         app:layout_constraintBottom_toTopOf="@+id/cmnt_btn_now"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/cmnt_btn_today"
         android:background="@drawable/community_button2" />

     <Button
         android:id="@+id/cmnt_btn_now"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:layout_marginStart="6dp"
         android:layout_marginLeft="6dp"
         android:layout_marginEnd="7dp"
         android:layout_marginRight="7dp"
         android:text="실시간 레시피"
         android:textSize="30sp"
         android:gravity="center_vertical"
         android:paddingLeft="20dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/cmnt_btn_week"
         android:background="@drawable/community_button3" />


</androidx.constraintlayout.widget.ConstraintLayout>