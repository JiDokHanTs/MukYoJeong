<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commu_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/community_item_background_round"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/commu_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제목: 김치볶음밥 만드는 법"
        android:textSize="25sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"
        android:background="#aaaaaaaa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"

        android:padding="5dp">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commu_item_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="작성자: MukYoJeong" />

            <TextView
                android:id="@+id/commu_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="2020.11.24" />
        </LinearLayout>

<!--        <ImageView-->
<!--            android:id="@+id/commu_item_profile"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="50dp"-->

<!--            android:src="@drawable/user_icon" />-->

    </LinearLayout>

    <ImageView
        android:id="@+id/commu_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/commu_temp_img" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="left|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/commu_item_like_ckb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/like_button_status"/>
        <TextView
            android:id="@+id/commu_item_like_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요 180개"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_comment_24" />

        <TextView
            android:id="@+id/commu_item_comments_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글 100개"/>
    </LinearLayout>
</LinearLayout>